<div class="container mt-5">
  <h1>All our Flats</h1>
  <p>You searched for <strong><%= params[:query] %></strong>We found 4 flats out of <%= Flat.all.length %> flats on our website.</p>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card mb-3" style="width: 22rem; box-shadow: 0px 3px 5px lightgrey;">
          <img src="<%= flat.url %>" class="card-img-top" alt="..."> <!-- TO DO  -->
          <div class="card-body flat-show-card">
            <div class="">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text">flat.address</p>
              <div class="d-flex">
                <div class="d-flex">
                  <div>
                    <%= flat.number_of_guests %>
                    <i class="fas fa-user-friends mr-3"></i>
                  </div>
                  <div>
                    <%= flat.price_per_night %>
                    <i class="fas fa-euro-sign"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
              <div class="display-flex px-3 mb-3">
              <%= link_to 'More info', flat_path(flat), class: 'mr-2' %>
              <%= link_to 'Edit', edit_flat_path(flat), class: 'text-warning mr-2' %>
              <%= link_to 'Remove', flat_path(flat), class: 'text-danger', method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
